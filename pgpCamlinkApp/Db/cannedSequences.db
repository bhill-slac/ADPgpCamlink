# StartRun
record( seq, "$(CAM):SeqStartRun" )
{
	field( DESC, "Arm EventBuilder and enable triggers" )
	# Arm EventBuilder for data stream
	field( DLY1, "0" ) field( DOL1, "0" ) field( LNK1, "$(CAM):EventBuilder:Blowoff PP NMS" )
	# Enable triggering
	field( DLY2, "0" ) field( DOL2, "1" ) field( LNK2, "$(CAM):Trigger:MasterEnable PP NMS" )

	info( autosaveFields, "DESC" )
	#	info( autosaveFields, "DESC DOL1 DLY1 DOL2 DLY2 DOL3 DLY3 DOL4 DLY4 DOL5 DLY5 DOL6 DLY6 DOL7 DLY7 DOL8 DLY8 DOL9 DLY9 DOLA DLYA" )
}

# StopRun
record( seq, "$(CAM):SeqStopRun" )
{
	field( DESC, "Stop triggers & blow off pipeline data" )
	# Disable triggering
	field( DLY1, "0" ) field( DOL1, "0" ) field( LNK1, "$(CAM):Trigger:MasterEnable PP NMS" )
	# Blow off data in EventBuilder pipeline
	field( DLY2, "0" ) field( DOL2, "1" ) field( LNK2, "$(CAM):EventBuilder:Blowoff PP NMS" )

	info( autosaveFields, "DESC" )
	#	info( autosaveFields, "DESC DOL1 DLY1 DOL2 DLY2 DOL3 DLY3 DOL4 DLY4 DOL5 DLY5 DOL6 DLY6 DOL7 DLY7 DOL8 DLY8 DOL9 DLY9 DOLA DLYA" )
}
